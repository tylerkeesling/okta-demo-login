doctype html
html
  head
    title Twizzlers Login
    link(rel='stylesheet' href='https://global.oktacdn.com/okta-signin-widget/5.14.1/css/okta-sign-in.min.css')
  body
    block content
    #osw-container

  script(src='https://global.oktacdn.com/okta-signin-widget/5.14.1/js/okta-sign-in.min.js')
  script.
    baseUrl="#{baseUrl}"
    var oktaSignIn = new OktaSignIn({baseUrl: "https://dev-76476905.okta.com"})

    oktaSignIn.renderEl({
      el: "#osw-container"
    }, function success(res) {
      if (res.status === "SUCCESS") {
        res.session.setCookieAndRedirect('https://dev-76476905.okta.com/app/UserHome');
      }
    })


